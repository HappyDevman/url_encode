<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td>original_url: <%= link.original_url %></td>
        <td>short_url: <%= link.short_url %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>

<div style="margin-top: 20px;">
 <%= form_tag redirect_url_links_path do %>
    <%= text_field_tag :short_url %>
    <%= submit_tag 'submit' %>
  <% end %>
</div>